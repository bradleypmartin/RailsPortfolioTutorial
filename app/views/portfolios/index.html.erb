<h1>Portfolio Items</h1>

<%= link_to "Create New Portfolio Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_show_path(item) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  <div><%= link_to "Edit Portfolio Item", edit_portfolio_path(item) %></div>
  <div><%= link_to 'Delete Portfolio Item', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>
